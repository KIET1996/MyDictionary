<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addWordActivity">

    <TextView
        android:id="@+id/lbHeadAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0288D1"
        android:gravity="center"
        android:text="Thên từ mới"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/lbAddWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập từ mới"
        android:textColor="#512DA8"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/addWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập từ mới ở đây"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lbAddKind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Từ loại"
        android:textColor="#512DA8"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/addKind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ví dụ noun, adjective, verb,.."
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lbAddMean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nghĩa của từ"
        android:textColor="#512DA8"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/addMean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nghĩa của từ"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lbAddExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ví dụ"
        android:textColor="#512DA8"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/addExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Đặt một câu với từ mới"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#303F9F"
        android:onClick="addNewWord"
        android:text="Thêm từ"
        android:textColor="#A7FFEB"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>